<section id="contact">
  <div class="container text-center">
    
    <div class="row">
      <div class="col-md-12">
        <h2>Contact Us</h2>
        <hr width="30%">
        <p>Need to get in touch? Fill in the form below for more information</p>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <form>
          <div class="col-md-6">
            <div class="form-group">
              <input type="email" class="form-control form-control-sm" id="email" placeholder="Email...">
            </div>
            <div class="form-group">
              <input type="text" class="form-control form-control-sm" id="name" placeholder="Name...">
            </div>
            <div class="form-group">
              <input type="text" class="form-control form-control-sm" id="subject" placeholder="Subject...">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <textarea class="form-control form-control-sm" id="message" placeholder="Message..." rows="6"></textarea>
            </div>
            <button type="submit" class="btn btn-outline-info btn-block">Submit</button>
          </div>
        </form>
      </div>
    </div>
  
  </div>
</section>
